<%= render partial: "post", object: @post, locals: { is_index: 0 } %>
<a id="comments"></a>
<% if @post.comments.count > 0 %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><i class="glyphicon glyphicon-comment" aria-hidden="true"></i> <%= @post.comments.count %> Comment<% if @post.comments.count > 1 %>s<% end %></h4>
      </div>
      <div class="panel-body">
         <% @post.comments.each do |comment| %>
             <%= render comment %>
         <% end %>
      </div>
    </div>
<% end %>
<div class="col-md-12">
<div class="row">
<div class="panel panel-default">
<%= simple_form_for([@post, @post.comments.build] , html: { class: 'form-horizontal' }) do |f| %>

    <div class="panel-body" style="margin: 10px 10px 10px 10px;">
      <% if !signed_in? %>
          <%= f.input :nickname %>
      <% end %>
      <%= f.input :content, label: "Comment" %>
    </div>
    <div class="panel-footer">
      <%= f.button :submit, "Add comment", class: "btn btn-primary" %>
    </div>
<% end %>
</div>
</div>
  </div>